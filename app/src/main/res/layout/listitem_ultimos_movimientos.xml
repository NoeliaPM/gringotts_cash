<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TextView_Producto"
        android:layout_width="@dimen/spinner_width_producto"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texto_plano" />

    <LinearLayout
        android:layout_width="@dimen/spinner_width_tienda"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView_Tienda"
            android:layout_width="@dimen/spinner_width_tienda"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/texto_plano_peq" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Fecha"
                android:layout_width="@dimen/spinner_width_fecha"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_Hora"
                android:layout_width="@dimen/spinner_width_fecha"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TextView_Precio"
        android:layout_width="@dimen/spinner_width_precio"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texto_plano" />

</LinearLayout>